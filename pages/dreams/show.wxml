<view class="container main-container">

      <view class="one-dream">
          <view class="avatar-view">
              <image class="avatar" mode="aspectFit" 
                   src="{{dream.avatar_url}}">
              </image>
          </view>
          <view class="dream-content">
            <view class="dream-item">{{dream.nickname}}</view>
            <view class="dream-item">
              <view class="dream-label">
               梦想：
              </view>
              <view class="dream-text">
                  {{dream.dream}}
              </view>
            </view>
            <view class="dream-item">现实： 
              <view class="dream-text">
                  {{dream.reality}}
              </view>
            </view>
            <view class="dream-item">
              <view class="complete-lable">完成： 
              </view>
              <progress percent="{{dream.progress}}" show-info />

            </view>
          </view>
      </view>
    <view class="comments">
     <block wx:for-items="{{dream.comments}}" wx:for-item="item" wx:key="{{index}}">
      <view id="{{index}}" class="comment">
        
            <view class="small-avatar-view">
                <image class="small-avatar" mode="scaleToFill" src="{{item.avatar_url}}"></image>

            </view>
            <view class="comment-content">
                <view class="comment-nickname">
                   {{item.nickname}}
                </view>
                <view class="content">
                   {{item.content}}
                </view>
                <view class="comment-time">
                   {{item.published_at}}
                </view>
            </view>
            
      </view>

    </block>
    </view>
</view>

<form  bindsubmit="formSubmit" bindreset="formReset">
    <view class="hidden">
      <input name="postId" value="{{dream.id}}"/>
    
    </view>
    <view class="say">
      
        <view class="writing">
             <textarea value="{{content}}"  name="content" class="write-area" fixed="true"    auto-height maxlength="240" placeholder="鼓励他，吐槽他" />
               
             
        </view>
        <view class="send-area">
            <button formType="submit" class="btn-send">
                <image 
                
                class="send-image" 
                src="../../images/paper.png"
                background-size="cover"></image>
            </button>

        </view>
    </view>
</form>

