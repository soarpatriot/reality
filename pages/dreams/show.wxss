/* pages/dreams/show.wxss */
.avatar{
  width: 44px;
  height: 44px;
}

.one-dream{
    
    width: 100%;
    display: flex;
    
    padding-top: 20rpx;
    
}
.avatar-view{
    
}
.dream-label{
    color: #4DBBFF;
}
.complete-lable{
    color: lawngreen;
}
.dream-text{
    padding: 20rpx;
    font-size: 12px;
    color: #666;
}
.dream-content{
    padding-left: 10px;
    flex: 1;
}
.dream-item{
    
    margin-bottom: 20rpx;
}

.say{
    display: flex;
    width: 100%;
    border-top:   solid 2rpx  #4DBBFF;
    z-index: 10;
    position: fixed;
    bottom: 0;
    align-items: center;
    
}

.writing{
    flex: 1;
    position: relative;
}
.write-area{
    padding: 40rpx 40rpx;
    width: 100%;
}
.send-image{
    padding: 30rpx 0;
    width: 64rpx;
    height: 64rpx;
}
.btn-send{
    display: flex;
    align-items: center;
    border-radius: 0;
    background-color: transparent;
}
button::after{
    border: 1px solid #fff;
}
.send-area{
    flex: none;
    margin-left: 60rpx;
    position: relative;
}

.hidden{
    display: none;
}