





/**
* comments and post
*/

.dream-label{
    color: #4DBBFF;
}
.complete-lable{
    color: lawngreen;
}
.dream-text{
    padding: 20rpx;
    font-size: 14px;
    color: #666;
}
.dream-content{
    padding-left: 10px;
    flex: 1;
}
.dream-item{
    
    margin-bottom: 20rpx;
}

.say{
    font-size: 14px;
    display: flex;
    width: 100%;
    border-top:   solid 2rpx  #4DBBFF;
    z-index: 10;
    position: fixed;
    bottom: 0;
    align-items: center;
    background-color: #fff;
}

.writing{
    flex: 1;
    position: relative;
}
.write-area{
    padding: 40rpx 40rpx;
    width: 100%;
    position: relative;
}
.send-image{
    padding: 30rpx 0;
    width: 64rpx;
    height: 64rpx;
}
.btn-send{
    display: flex;
    align-items: center;
    border-radius: 0;
    background-color: transparent;
}
button::after{
    border: 1px solid #fff;
}
.send-area{
    flex: none;
    margin-left: 60rpx;
    position: relative;
}

.hidden{
    display: none;
}

.small-avatar{
  width: 32px;
  height: 32px;
}
.comments{
   
   
   padding: 30rpx 30rpx;
   padding-bottom: 120rpx;
   background-color: #fff;
   font-size: 12px;
   width: 100%;
}
.comment{
   padding: 20rpx 0;
   display: flex;
   width: 100%;
   flex-direction: row;
}

.comment-content{
    flex: 1;
    padding: 0 0 20rpx 30rpx;
    border-bottom:  solid 2rpx #eee;
}

.comment-nickname{
    color: #666;
}
.content{
    font-size: 14px;
    margin-top: 20rpx;
    color: #333;
}

.comment-time{
    margin-top: 20rpx;
    font-size: 12px;
    color: #888;
}
