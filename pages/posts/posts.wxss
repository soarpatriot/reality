/* pages/posts/posts.wxss */
.section {
    margin-top: 20rpx;
}
.image-wraper{
  position: relative;
  width: 25%;
  box-sizing: border-box;
  padding: 0 20rpx;
}
.images-view{
  width: 100%;
  margin: 40rpx -20rpx;
  display: flex;
  direction: row;
  justify-content: flex-start;
  flex-wrap: wrap;
}
.delete-image{
  width: 64rpx;
  height: 64rpx;
  position: absolute;
  top: -30rpx;
  right: 0rpx;
}
.uploaded-image{
  width: 180rpx;
  height: 180rpx;
  padding: 20rpx;
}
.choosen-image{
  margin: 40rpx 0;
}
.add-image{
  width: 128rpx;
  height: 128rpx;
}
.publish-btn{
    width: 50%;
    font-size: 14px;
}
.write-area{
    margin-top: 20rpx;
    font-size: 14px;
}